<div class="hero-section">
  <h1 class="hero-title">The Universe's Largest Marketplace!</h1>

  <div class="featured-product">
    <div>
      <p class="hero-subtitle">Hot Deals from Across the Universe!</p>
      <h2 class="product-title">Lando's Millenium Falcon</h2>
      <p class="discount">20% OFF</p>
      <%= link_to "VIEW DETAILS", product_path(1), class: "btn btn-primary" %>
    </div>
    <%= cl_image_tag("xxdbsnhi92ab5dobfcdj",
      transformation: { width: 1000, crop: "limit" },
      alt: "Lando's Millennium Falcon",
      class: "featured-image",
      height: 450,
      crop: "fit") %>
  </div>
</div>

<div class="features-section">
  <div class="why-us">
    <h3>Why Choose Us?</h3>
    <ul>
      <li>✅ Authentic Galactic Merchandise</li>
      <li>✅ Trusted by Rebels and Empires Alike</li>
      <li>✅ Interestellar Shipping to Any Planet</li>
    </ul>
  </div>

  <div class="cta">
    <h3>Join the Galactic Marketplace Today!</h3>
    <%= link_to "SIGN UP NOW", new_user_registration_path, class: "btn btn-warning" %>
  </div>
<div class="categories-section">
  <div class="category-card">
    <%= cl_image_tag("skjlrfr3pk9showa5y9c",
      transformation: { width: 350, crop: "limit" },
      alt: "Star Wars Droids",
      class: "category-image",
      height: 300,
      crop: "fit") %>
    <h4>DROIDS</h4>
    <%= link_to "VIEW DETAILS", filtered_products_path(category: "droids"), class: "btn btn-secondary"%>
  </div>
  <div class="category-card">
    <%= cl_image_tag("xbcmbyansaufkcsv15gq",
      transformation: { width: 350, crop: "limit" },
      alt: "AT-AT Walker",
      class: "category-image",
      height: 300,
      crop: "fit") %>
    <h4>VEHICLES</h4>
    <%= link_to "VIEW DETAILS", filtered_products_path(category: "vehicles"), class: "btn btn-secondary"%>
  </div>
  <div class="category-card">
    <%= cl_image_tag("quahf3wejknjdr1xznxa",
      transformation: { width: 350, crop: "limit" },
      alt: "X-Wing Starfighter",
      class: "category-image",
      height: 300,
      crop: "fit") %>
    <h4>SPACESHIPS</h4>
    <%= link_to "VIEW DETAILS", filtered_products_path(category: "spaceships"), class: "btn btn-secondary"%>
  </div>
</div>
</div>
