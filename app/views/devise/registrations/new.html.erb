<div class="signup-container">
  <h1 class="form-title">SIGN UP <i class="fa-solid fa-user-plus"></i></h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: true, input_html: { autocomplete: "email" } %>
      <%= f.input :password, required: true, input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign Up", class: "btn btn-submit" %>
    </div>
  <% end %>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>
